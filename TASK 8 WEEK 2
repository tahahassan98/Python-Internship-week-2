print(" Temperature Converter ")

# Celsius to Fahrenheit conversion
while True:
    try:
        celsius = float(input("\nEnter temperature in Celsius: "))
        fahrenheit = (celsius * 9/5) + 32
        print(f" {celsius}째C = {fahrenheit:.1f}째F")
        break
    except ValueError:
        print(" Please enter a valid number (e.g., 25 or 37.5)")

# Fahrenheit to Celsius conversion
while True:
    try:
        fahrenheit = float(input("\nEnter temperature in Fahrenheit: "))
        celsius = (fahrenheit - 32) * 5/9
        print(f" {fahrenheit}째F = {celsius:.1f}째C")
        break
    except ValueError:
        print(" Please enter a valid number (e.g., 77 or 98.6)")